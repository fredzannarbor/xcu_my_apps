# ============================================================================
# Centralized Environment Configuration Template
# ============================================================================
#
# This file serves as a template for the actual .env file.
# Copy this file to .env and fill in your actual API keys and credentials.
#
# IMPORTANT: Never commit the actual .env file to version control!
# ============================================================================

# ============================================================================
# LLM API Keys
# ============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_USER_ID_FOR_SAFETY_TRACKING=your-user-id

# Anthropic (Claude) API Key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# xAI (Grok) API Key
XAI_API_KEY=xai-your-xai-key-here

# Groq API Key
GROQ_API_KEY=gsk_your-groq-key-here

# Google Gemini API Key
GEMINI_API_KEY=your-gemini-api-key

# Aleph Alpha API Token
ALEPH_ALPHA_API_TOKEN=your-aleph-alpha-token

# Replicate API Token (for AI model hosting)
REPLICATE_API_TOKEN=your-replicate-token

# Inception API Key
INCEPTION_API_KEY=your-inception-key

# Helicone API Key (LLM monitoring and caching)
HELICONE_API_KEY=your-helicone-key

# App-specific OpenAI key for Trillions of People
TRILLIONS_OPENAI_API_KEY=sk-your-trillions-openai-key

# ============================================================================
# Google Services
# ============================================================================
GOOGLE_API_ID=your-google-api-id
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CSE_ID=your-custom-search-engine-id

# ============================================================================
# External Services
# ============================================================================

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_ENDPOINT_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID=basic
STRIPE_PRICE_ID_2=price_your-price-id
STRIPE_STANDARD_PRICE_LINK=https://buy.stripe.com/test_your-link
STRIPE_PREMIUM_PRICE_LINK=https://buy.stripe.com/test_your-premium-link

# Zotero Reference Management
ZOTERO_API_KEY=your-zotero-api-key
ZOTERO_LIBRARY_ID=your-library-id
ZOTERO_LIBRARY_TYPE=user

# Internet Archive
IA_USERNAME=your-ia-email@example.com
IA_PASSWORD=your-ia-password

# Zyte Web Scraping Service
ZYTE_API_KEY=your-zyte-api-key

# GitHub Personal Access Token
GITHUB_PAT=ghp_your-github-token

# ============================================================================
# Email Configuration
# ============================================================================
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password

# ============================================================================
# Application Configuration
# ============================================================================
LOCAL_HOST=http://localhost:8501

# Encryption Settings
ENC_PASSWORD=your-encryption-password-min-32-chars
ENC_NONCE=your-encryption-nonce

# Cryptocurrency Wallet Mnemonic (12-24 words)
MNEMONIC=word1 word2 word3 word4 word5 word6 word7 word8 word9 word10 word11 word12

# ============================================================================
# Database Configuration
# ============================================================================
STORAGE=SQLITE
SQLITE_DB=restore.db
SQLITE_DB_PATH=./db
URI_SQLITE_DB=db/restore.db

# ============================================================================
# System Configuration
# ============================================================================
TOKENIZERS_PARALLELISM=false
TESSDATA_PREFIX=/usr/local/share/tessdata

# Legacy OpenAI Configuration File Path
OPENAI_CONFIG=/path/to/openai.cfg

# Fortune Cookie Configuration (optional, for fun)
FORTUNE_BIN=/usr/local/bin/fortune
FORTUNE_DATABASE=discworld
FORTUNE_FLAG=

# ============================================================================
# Development Environment Variables (Optional)
# ============================================================================
# These are typically set by your shell/IDE but can be specified here
# FILE_ROOT=/path/to/your/project
# PROJECT_HOME=/path/to/dev/directory
# EDITOR=your-preferred-editor
