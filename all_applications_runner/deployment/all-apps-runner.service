[Unit]
Description=xtuff.ai All Applications Runner - Master Control
After=network.target

[Service]
Type=simple
User=wfz
Group=wfz
WorkingDirectory=/home/wfz/bin/all_applications_runner
Environment="PATH=/home/wfz/bin/all_applications_runner/.venv/bin:/home/wfz/.local/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONUNBUFFERED=1"
ExecStart=/home/wfz/bin/all_applications_runner/.venv/bin/streamlit run main.py --server.port=8500 --server.address=127.0.0.1 --server.headless=true
Restart=always
RestartSec=10
StandardOutput=append:/home/wfz/bin/all_applications_runner/logs/runner.log
StandardError=append:/home/wfz/bin/all_applications_runner/logs/runner-error.log

[Install]
WantedBy=multi-user.target
