[Unit]
Description=Resume & Contact - fredzannarbor.com
After=network.target

[Service]
Type=exec
User=www-data
Group=www-data
WorkingDirectory=/home/wfz/personal/resume-site
Environment=PATH=/usr/local/bin:/usr/bin:/bin
Environment=PYTHONPATH=/home/wfz/personal/resume-site
ExecStart=/usr/bin/python3 -m streamlit run  app.py --server.port=8508
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target