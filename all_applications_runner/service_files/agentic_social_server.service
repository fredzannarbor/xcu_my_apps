[Unit]
Description=AI Social Server - xtuff.ai
After=network.target

[Service]
Type=exec
User=wfz
Group=wfz
WorkingDirectory=/home/wfz/agentic_social_server
Environment=PATH=/home/wfz/.local/bin:/usr/local/bin:/usr/bin:/bin
Environment=PYTHONPATH=/home/wfz/agentic_social_server
ExecStart=/bin/bash -c "cd /home/wfz/agentic_social_server && chmod -R 755 .venv 2>/dev/null || true && /usr/local/bin/uv run streamlit run app.py --server.port 8501"
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
