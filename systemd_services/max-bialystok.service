[Unit]
Description=Max Bialystok Financial - Book Publisher Financial Analysis
After=network.target

[Service]
Type=simple
User=wfzimmerman
Group=wfzimmerman
WorkingDirectory=/home/wfzimmerman/xcu_my_apps/nimble/codexes-factory
Environment="PATH=/home/wfzimmerman/xcu_my_apps/nimble/codexes-factory/.venv/bin:/home/wfzimmerman/.local/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONUNBUFFERED=1"
Environment="PYTHONPATH=src"
ExecStart=/usr/local/bin/uv run streamlit run max_bialystok_home.py --server.port=8506 --server.address=127.0.0.1 --server.headless=true
Restart=always
RestartSec=10
StandardOutput=append:/home/wfzimmerman/xcu_my_apps/nimble/codexes-factory/logs/max-bialystok.log
StandardError=append:/home/wfzimmerman/xcu_my_apps/nimble/codexes-factory/logs/max-bialystok-error.log

[Install]
WantedBy=multi-user.target
