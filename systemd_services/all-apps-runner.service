[Unit]
Description=xtuff.ai Cinematic Universe - All Applications Runner
After=network.target

[Service]
Type=simple
User=wfzimmerman
Group=wfzimmerman
WorkingDirectory=/home/wfzimmerman/xcu_my_apps/all_applications_runner
Environment="PATH=/home/wfzimmerman/xcu_my_apps/all_applications_runner/.venv/bin:/home/wfzimmerman/.local/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONUNBUFFERED=1"
ExecStart=/usr/local/bin/uv run streamlit run main.py --server.port=8500 --server.address=127.0.0.1 --server.headless=true
Restart=always
RestartSec=10
StandardOutput=append:/home/wfzimmerman/xcu_my_apps/all_applications_runner/logs/runner.log
StandardError=append:/home/wfzimmerman/xcu_my_apps/all_applications_runner/logs/runner-error.log

[Install]
WantedBy=multi-user.target
